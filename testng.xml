<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Framework1Suite" parallel="tests" thread-count="2">
	<listeners>
		<listener class-name="util.ReportUtil"></listener>
	</listeners>
	<test name="Simple form" parallel="classes" thread-count="2" >
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="Test.SimpleFormTest"></class>
		</classes>
	</test>
	<test name="Input Test" parallel="classes" thread-count="2" >

		<parameter name="browser" value="firefox"></parameter>
		<classes>
			<class name="Test.InputTest"></class>
		</classes>
	</test>

	<test name="Facebook test" parallel="classes" thread-count="2" >
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="Test.WindowPopUpTest"></class>
		</classes>
	</test>

	<test name="Javascript prompt Alert Test" parallel="classes" thread-count="2" >
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="Test.JavascriptPromptVerifyTest"></class>
		</classes>
	</test>
	
	<test name="Form Test" parallel="classes" thread-count="2">
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="Test.FormSubmitTest"></class>
		</classes>
	</test>
	<test name="Form Error Test" parallel="classes" thread-count="2">
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="Test.SubmitFormErrorTest"></class>
		</classes>
	</test>
	<test name="Radio button Test" parallel="classes" thread-count="2">
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="Test.RadioButtonTest"></class>
		</classes>
	</test>

	<test name="Drag and Drop Test" parallel="classes" thread-count="2">
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="Test.DragAndDropTest"></class>
		</classes>
	</test>
	<test name="Table Verify Test" parallel="classes" thread-count="2" >
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="Test.TableDataVerifyTest"></class>
		</classes>
	</test>

</suite>